<% provide(:title, 'Lista de Servicos') %>
<%if @funcionario_servicos.count > 0%>
	<h1>
		<%= @funcionario_servicos.first.funcionario.nome%> - Servicos 
	</h1>
	<center><%= will_paginate%></center>
	
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nome Servico</th>
				<th>Valor Cobrado</th>
				<th>Comissao</th>
				<th>Deletar</th>
			</tr>
		</thead>
		<tbody>
			
			<%= render @funcionario_servicos %>
			
		</tbody>
	</table>
	
	<center><%= will_paginate%></center>
	
<%else%>
	<h1>Nao ha servicos para o funcionario</h1> 	
<%end%>

<p><%= link_to 'Novo Servicos', controller:"funcionario_servicos", action:"new", funcionario_id: @funcionario_servicos.first.funcionario.id %> </p>
