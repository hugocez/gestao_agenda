<% provide(:title, 'Lista de Faixas de Servico') %>

	<h1>
		<%= @faixa_funcionario_servicos.first.funcionario_servico.funcionario.nome + " - " + @faixa_funcionario_servicos.first.funcionario_servico.servico.descricao%> 
	</h1>
	<center><%= will_paginate%></center>
	
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Dia da Semana</th>
				<th>Hora Inicio</th>
				<th>Hora Fim</th>
				<th>Valor Cobrado</th>
				<th>Duracao</th>
				<th>Deletar</th>
			</tr>
		</thead>
		<tbody>
			
			<%= render @faixa_funcionario_servicos %>
			
		</tbody>
	</table>
	
	<center><%= will_paginate%></center>
	

<p><%= link_to 'Nova Faixa', controller:"faixa_funcionario_servicos", action:"new", funcionario_servico_id: @faixa_funcionario_servicos.first.funcionario_servico_id %> </p>
